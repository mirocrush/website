# ── Server ──────────────────────────────────────────────────────────────────
PORT=5000

# ── MongoDB Atlas ────────────────────────────────────────────────────────────
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority

# ── Supabase Storage ─────────────────────────────────────────────────────────
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ── File upload protection ───────────────────────────────────────────────────
UPLOAD_ADMIN_TOKEN=replace-with-a-long-random-secret

# ── Resend (email service) ───────────────────────────────────────────────────
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx
# From address — use a domain you've verified in Resend; fallback is onboarding@resend.dev
FROM_EMAIL=noreply@yourdomain.com

# ── JWT ──────────────────────────────────────────────────────────────────────
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=replace-with-a-64-byte-hex-secret

# ── CORS (optional — set to your Vercel URL in production) ──────────────────
# CLIENT_URL=https://your-app.vercel.app
